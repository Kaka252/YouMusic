<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_album"
        android:layout_width="64dip"
        android:layout_height="64dip" />

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="64dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_weight="1"
        android:paddingBottom="7dip"
        android:paddingTop="7dip">

        <TextView
            android:id="@+id/tv_audio_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_c1"
            android:textSize="@dimen/text_d1" />

        <TextView
            android:id="@+id/tv_audio_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_audio_title"
            android:layout_marginTop="5dip"
            android:singleLine="true"
            android:textColor="@color/text_c2"
            android:textSize="@dimen/text_d3" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="64dip"
        android:layout_marginRight="5dip"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_play_now"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip"
            android:src="@mipmap/ic_play" />

        <ImageView
            android:id="@+id/iv_play_next"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip"
            android:src="@mipmap/ic_play_next" />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip"
            android:src="@mipmap/ic_shut_down" />

    </LinearLayout>


</LinearLayout>